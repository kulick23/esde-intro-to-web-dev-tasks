{
  "private": true,
  "workspaces": [
    "packages/**/*"
  ],
  "name": "intro-to-web-dev-tasks",
  "version": "1.0.0",
  "description": "Practical tasks for EHU EPAM Introduction to Web Dev Course",
  "main": "index.js",
  "scripts": {
    "serve:hometask-QWERy": "npm run start --workspace=packages/hometask-QWERy",
    "serve:classtask-Humankind": "npm run start --workspace=packages/classtask-Humankind",
    "serve:classtask-workshop-27-03": "npm run start --workspace=packages/classtask-workshop-27-03",
    "serve:classtask-YuliaVorman": "npm run start --workspace=packages/classtask-YuliaVorman",
    "move": "node build.js",
    "build:series": "node build.js",
    "build": "mkdir dist && npm run build:series",
